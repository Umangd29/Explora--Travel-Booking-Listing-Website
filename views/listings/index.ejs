                <a href="/listings/<%= list._id%>">
                    <div class="card col listings-card">
                        <img src=" <%=list.image.url%>"" class="card-img-top" alt="Listing image" style="height: 20rem;">
                        <div class="card-img-overlay"></div>
                        <div class="card-body">
                            <p class="card-text">
                                <b>
                                    <%= list.title %>
                                </b>
                                <br>
                                â‚¹ <%= list.price.toLocaleString("en-IN") %> / night
                            </p>
                        </div>
                    </div>
                </a>

                <% } %>
        </div>
    </body>